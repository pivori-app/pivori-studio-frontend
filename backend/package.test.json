{
  "name": "pivori-studio-backend",
  "version": "2.0.0",
  "description": "PIVORI Studio v2.0 Backend API",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build needed for Node.js'",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:security": "vitest run security",
    "test:auth": "vitest run security.auth.test.js",
    "test:encryption": "vitest run security.encryption.test.js",
    "test:secrets": "vitest run security.secrets.test.js",
    "test:audit": "vitest run security.audit.test.js",
    "test:api": "vitest run api.integration.test.js",
    "test:owasp": "vitest run owasp.compliance.test.js",
    "test:compliance": "vitest run compliance.test.js",
    "test:all": "vitest run",
    "test:report": "vitest run --reporter=html --outputFile=reports/test-report.html",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write '**/*.js'",
    "seed": "node seed.mjs",
    "migrate": "supabase db push",
    "migrate:reset": "supabase db reset",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:dependencies": "npm outdated"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "express-mongo-sanitize": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "@supabase/supabase-js": "^2.26.0",
    "axios": "^1.4.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "vitest": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "@vitest/coverage-v8": "^0.34.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "@supabase/cli": "^1.62.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

