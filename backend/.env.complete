# ============ APPLICATION ============
NODE_ENV=production
PORT=3000
APP_NAME=PIVORI Studio
APP_VERSION=2.0.0

# ============ SUPABASE ============
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ============ AUTHENTICATION ============
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRY=3600
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars
REFRESH_TOKEN_EXPIRY=604800

# ============ ENCRYPTION ============
ENCRYPTION_KEY=your-encryption-key-32-hex-chars
DATA_ENCRYPTION_KEY=your-data-encryption-key-32-hex-chars
ENCRYPTION_ALGORITHM=aes-256-gcm

# ============ SECURITY ============
CORS_ORIGIN=https://your-domain.com,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# ============ FRONTEND ============
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://api.your-domain.com
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_APP_TITLE=PIVORI Studio
VITE_APP_ID=pivori-studio-v2

# ============ DATABASE ============
DATABASE_URL=postgresql://user:password@localhost:5432/pivori_studio
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000

# ============ LOGGING ============
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
AUDIT_LOG_FILE=logs/audit.log

# ============ MONITORING ============
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============ ANALYTICS ============
VITE_ANALYTICS_ENDPOINT=https://analytics.your-domain.com
VITE_ANALYTICS_WEBSITE_ID=your-website-id

# ============ EMAIL ============
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@pivori.com
MAIL_TO=team@pivori.com

# ============ SLACK NOTIFICATIONS ============
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#alerts
SLACK_USERNAME=PIVORI Studio Bot

# ============ EXTERNAL SERVICES ============
STRIPE_SECRET_KEY=sk_live_your-key
STRIPE_PUBLIC_KEY=pk_live_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# ============ VERCEL ============
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# ============ GITHUB ============
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-username/pivori-studio

# ============ FEATURE FLAGS ============
FEATURE_2FA=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true
FEATURE_ENCRYPTION=true
FEATURE_CSRF_PROTECTION=true
FEATURE_CORS=true

# ============ SECURITY HEADERS ============
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff

# ============ API KEYS ============
API_KEY_EXPIRY=2592000000
API_KEY_MAX_REQUESTS_PER_DAY=10000
API_KEY_MAX_REQUESTS_PER_MINUTE=100

# ============ BACKUP & RECOVERY ============
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# ============ COMPLIANCE ============
GDPR_ENABLED=true
SOC2_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_RETENTION_DAYS=90

# ============ DEVELOPMENT ============
DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_SERVICES=false

