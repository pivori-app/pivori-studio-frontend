# Application
VITE_APP_TITLE=PIVORI Studio
VITE_APP_ID=pivori-studio-v2
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=production

# API Configuration
VITE_API_URL=https://api.pivori.studio
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication
VITE_AUTH_PROVIDER=oauth2
VITE_OAUTH_CLIENT_ID=your_client_id
VITE_OAUTH_REDIRECT_URI=https://pivori.studio/callback

# Analytics
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_ENDPOINT=https://analytics.pivori.studio
VITE_ANALYTICS_WEBSITE_ID=your_website_id

# Feature Flags
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_PWA=true
VITE_FEATURE_OFFLINE_MODE=true

# Security
VITE_SECURITY_CSP_ENABLED=true
VITE_SECURITY_RATE_LIMIT=100

# Monitoring
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACE_SAMPLE_RATE=0.1

# Development
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

